@model LoginViewModel
@{
    ViewData["Title"] = "Acceso de usuario";
}

<div class="card mt-5">
    <div class="card-body">
        <h3 class="card-title text-center">Acceso de usuario</h3>

        <div class="row mt-4">
            <div class="col-md-8 col-lg-6 mx-auto">
                <form asp-area="Identity" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]"
                      method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa el correo electrónico">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox mb-3">
                        <div class="custom-check">
                            <label class="form-label" asp-for="RememberMe">
                                <input class="form-check-input" asp-for="RememberMe">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            Acceder
                            <i class="bi-arrow-right-circle-fill"></i>
                        </button>
                    </div>
                    <div class="mt-3">
                        <p>
                            <a asp-area="Identity" asp-controller="Account" asp-action="Register">
                                ¿Registrarse como un nuevo usuario?
                            </a>
                        </p>
                        <p>
                            <a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword">
                                ¿Olvidó la contraseña?
                            </a>
                        </p>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}