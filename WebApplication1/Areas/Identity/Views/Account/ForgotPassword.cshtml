@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "¿Olvidó contraseña?";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">¿Olvidó la contraseña?</h3>
        <form asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="row mt-4">
                <div class="col-md-8 col-lg-6 mx-auto">

                    <div class="mb-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa el correo electrónico">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg">
                        Recuperar contraseña <i class="bi-arrow-right-circle-fill"></i>
                    </button>

                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}