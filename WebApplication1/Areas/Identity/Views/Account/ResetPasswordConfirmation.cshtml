@{
    ViewData["Title"] = "Confirmación de recuperación de contraseña";
}

<div class="container text-center mt-5">
    <div class="card mx-auto shadow" style="max-width: 500px;">
        <div class="card-body">
            <h2 class="card-title text-success mb-4">¡Su contraseña ha sido cambiada!</h2>
            <p class="card-text">Gracias por restablecer su contraseña. Ahora puede iniciar sesión con su nueva contraseña de manera segura.</p>
            <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">Iniciar sesión</a>
        </div>
    </div>
</div>
