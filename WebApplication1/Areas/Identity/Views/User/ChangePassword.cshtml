@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Cambiar Contraseña</h3>
        <form asp-area="Identity" asp-controller="User" asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="row mt-4">
                <div class="col-md-8 col-lg-6 mx-auto">                    

                    <div class="mb-3">
                        <label asp-for="OldPassword"></label>
                        <input asp-for="OldPassword" class="form-control" placeholder="Ingresa la contraseña">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" class="form-control" placeholder="Ingresa la contraseña">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmNewPassword"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Ingresa la confirmación de la contraseña">
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-danger w-100 btn-lg">Cambiar Contraseña</button>
                    </div>

                </div>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
