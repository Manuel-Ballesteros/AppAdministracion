@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-1 text-danger">Oops!</h1>
            <h2 class="display-5">Algo salió mal</h2>
            <p class="lead mt-3">Parece que hubo un problema al procesar tu solicitud.</p>
            <p class="mb-2">Estamos trabajando para resolverlo. Si necesitas ayuda, no dudes en contactarnos.</p>
            <p class="mb-2">@ViewBag.ErrorMessage</p>

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Volver al Inicio</a>
                <a href="mailto:desarrollodesoftware.alexander@gmail.com" class="btn btn-secondary btn-lg">Contactar Soporte</a>
            </div>

            <div class="mt-5">                
                <p class="text-muted">Fecha: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>
    </div>
</div>

<div>
    <a class="mt-3 btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Regresar a inicio</a>
</div>
